<Window x:Class="ПЗ_13_3_.Views.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сотрудник" Height="200" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="{Binding Name}" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <TextBlock Text="Статус:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Status}" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Начать" Click="StartButton_Click" Width="80" Margin="5"/>
                <Button Content="Пауза" Click="PauseButton_Click" Width="80" Margin="5"/>
                <Button Content="Завершить" Click="FinishButton_Click" Width="80" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
